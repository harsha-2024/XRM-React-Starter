{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/components/*": [
        "src/components/*"
      ],
      "@/features/*": [
        "src/features/*"
      ],
      "@/services/*": [
        "src/services/*"
      ],
      "@/store": [
        "src/store/index"
      ],
      "@/pages/*": [
        "src/pages/*"
      ],
      "@/theme/*": [
        "src/theme/*"
      ],
      "@/i18n/*": [
        "src/i18n/*"
      ],
      "@/plugins/*": [
        "src/plugins/*"
      ]
    }
  },
  "include": [
    "src"
  ]
}